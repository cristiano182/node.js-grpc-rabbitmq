{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "skipLibCheck": true,
      "module": "commonjs",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "target": "es6",
      "noImplicitAny": true,
      "sourceMap": false,
      "outDir": "dist",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "moduleResolution": "node",
      "noEmit": false,
      "baseUrl": "./src",
      "paths": {
        "@usecases/*": ["usecases/*"],
        "@domain/*": ["domain/*"],
        "@infra/*": ["infra/*"],
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "test"]
  }
